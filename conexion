<?
	function crear_conexion($servidor, $usuario, $clave){
		return mysql_connect($servidor, $usuario, $clave);
	}

	function seleccionar_base($nombre, $conexion){
		mysql_select_db($nombre, $conexion);
	}

	function cerrar_conexion($conexion){
		mysql_close($conexion);
	}
	
	function consulta($consulta, $conexion){
		return mysql_query($consulta, $conexion);  
	}

	function get_resultado($resultado, $tipo = MYSQL_ASSOC){
		return mysql_fetch_array($resultado, $tipo);
	}
?>
